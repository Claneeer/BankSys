# BankSys Environment Variables Example
# Copy this file to .env and update the values

# Database Configuration
MONGO_URL=mongodb://banksys_admin:banksys_password_2025@localhost:27017/banksys?authSource=admin
DB_NAME=banksys

# Backend Configuration
SECRET_KEY=banksys-secret-key-production-2025
ENVIRONMENT=development

# Frontend Configuration
EXPO_PUBLIC_BACKEND_URL=http://localhost:8001
NODE_ENV=development

# Security (Change in production)
BANKSYS_ADMIN_PASSWORD=admin123
JWT_EXPIRY=30d

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
API_RATE_LIMIT=100
WEB_RATE_LIMIT=1000

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info